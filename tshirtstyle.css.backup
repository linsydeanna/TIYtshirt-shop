    opacity: 100;
}

.submenutwo {
    border: 3px #60A7D8 solid;
    background-color: white;
    width: 68px;
    height: 220px;
    position: relative;
    right: -1px;
    bottom: 226px;
    opacity: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    justify-content: space-between;
    align-content: center;
    justify-content: space-around;
