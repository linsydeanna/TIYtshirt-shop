.maincontainer {
    position: relative;
    width: 100%;
}

ul, li {
    padding: 0;
    margin: 0;
    list-style-type: none;
}

ul {
    position: relative;
    display: -webkit-flex;
    display: -moz-flex;
    display: -ms-flex;
    display: flex;
    -webkit-flex-flow: row wrap;
    -moz-flex-flow: row wrap;
    -ms-flex-flow: row wrap;
    flex-flow: row wrap;
    -webkit-justify-content: center;
    -moz-justify-content: center;
    -ms-justify-content: center;
    -webkit-justify-content: center;
}

.containertwo {
    display: flex;
    width: 395px;
    flex-wrap: wrap;
    margin: auto;
    border: 3px #60A7D8 solid;
    margin-right: 1rem;
    margin-bottom: 1rem;
}

.largebox {
    width: 100%;
    height: 60%;
    display: flex;
    position: relative;

}

.shirtpic {
    width: 83%;
    height: 83%;
    padding: 31px;
}

.text {
    width: 100%;
    font-family: sans-serif;
    color: #60A7D8;
    font-size: 30px;
    text-align: center;
}

p:nth-child(2) {
    font-size: 22px;
    padding: 0px 12px 5px 12px;
}

.small-with-border {
    border-left: 3px #60A7D8 solid;
}

.allsmall {
    width: 79px;
    height: 60px;
    position: relative;
    border-top: 3px #60A7D8 solid;
    background-color: white;
    box-sizing: border-box;
}

.icons {
    position: absolute;
    padding: 18px 0px 0px 26px;
    font-size: 23px;
    color: #60A7D8;
}

.smallboxone:hover {
    background-color: #60A7D8;
    cursor: pointer;
}

.smallboxone:hover .refresh {
    color: white;
}

.smallboxtwo:hover {
    background-color: #60A7D8;
    cursor: pointer;
}

.smallboxtwo:hover .heart {
    color: white;
}

.extralarge {
    font-family: sans-serif;
    margin: -200px 0px -50px 4px;
    font-size: 18px;
    text-align: center;
    color: #60A7D8;
}

.smallboxthree:hover {
    background-color: #60A7D8;
    cursor: pointer;
}

.smallboxthree:hover #squareiconblue {
    color: white;
}

.smallboxfour:hover {
    background-color: #60A7D8;
    cursor: pointer;
}

.smallboxfour:hover .extralarge {
    color: white;
}

.allsquareicons {
    position: absolute;
    margin: -218px 5px 150px 23px;
    font-size: 38px;
    color: #60A7D8;
}

.smallboxfive {
    cursor: pointer;
    outline: none;
}

.smallboxfive:hover {
    background-color: #60A7D8;
}

.smallboxfive:hover .cart {
    color: white;
}

.submenuone {
    border: 3px #60A7D8 solid;
    background-color: white;
    width: 68px;
    height: 210px;
    position: relative;
    right: 0px;
    bottom: 213px;
    opacity: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    justify-content: space-between;
    align-content: center;
    text-align: center;
}

.size {
    width: 100%;
    height: 25%;
    padding: 3px;
    font-family: sans-serif;
    font-size: 30px;
    color: #60A7D8;
    border-bottom: 3px #60A7D8 solid;
    display: flex;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    -moz-box-sizing: border-box;
}

.tshirtXL {
    margin: auto;
}

.tshirtL {
    margin: auto;
}

.tshirtM {
    margin: auto;
}

.tshirtS {
    margin: auto;
}

